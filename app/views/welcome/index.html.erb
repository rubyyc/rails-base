<h1>Hello World!</h1>

<div class="col-md-12">
  <div class="group">
    <%= link_to "New", '#', class: "btn btn-primary pull-right" %>
  </div>

  <table class="table table-striped table-bordered table-hover text-center">
    <thead>
    <tr>
      <td>#</td>
      <td>Title</td>
      <td>Description</td>
      <td colspan="2">操作</td>
    </tr>
    </thead>

    <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td>#</td>
        <td><%= link_to group[:title], '#' %></td>
        <td><%= group[:description] %></td>
        <td><%= link_to 'Edit', '#', :class => "btn btn-info" %></td>
        <td><%= link_to 'Delete', '#', methods: :delete, :class => "btn btn-danger", data: { confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>