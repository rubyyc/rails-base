<div class="col-md-12">
  <div class="group">
    <%= link_to "New Post", new_post_path, class: "btn btn-primary pull-right" %>
  </div>

  <table class="table table-striped table-bordered table-hover text-center">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Description</td>
        <td colspan="2">操作</td>

      </tr>
    </thead>

    <tbody>
      <%= render :partial => "post_item", :collection => @posts, :as => :post %>
    </tbody>
  </table>
</div>